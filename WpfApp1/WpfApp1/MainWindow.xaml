<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Button x:Name="bt_getResults" Content="Obter Resultados" HorizontalAlignment="Left" Margin="291,42,0,0" VerticalAlignment="Top" Click="bt_getResults_Click" Width="109"/>
		<Label x:Name="lbl_search" Content="Procura:" HorizontalAlignment="Left" Margin="56,18,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="tb_search" HorizontalAlignment="Left" Margin="56,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="217"/>
		<ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="57,74,0,0" VerticalAlignment="Top" Width="217" Visibility="Hidden" SelectionChanged="comboBox_SelectionChanged"/>



		<Label x:Name="lbl_today" Content="Hoje" HorizontalAlignment="Left" Margin="65,117,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

		<Label x:Name="lbl_this_weak" Content="Previsão para esta semana" HorizontalAlignment="Left" Margin="545,117,0,0" VerticalAlignment="Top" Width="164" FontWeight="Bold"/>
		<Label x:Name="lbl_t_temp" Content="Temperatura" HorizontalAlignment="Left" Margin="65,156,0,0" VerticalAlignment="Top"/>
		<Label x:Name="lbl_t_temp_v" Content="{}{value}" HorizontalAlignment="Left" Margin="173,156,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.558" Width="49"/>
		<Label x:Name="lbl_t_temp_min" Content="Temperatura Min." HorizontalAlignment="Left" Margin="65,179,0,0" VerticalAlignment="Top"/>
		<Label x:Name="lbl_t_temp_min_v" Content="{}{value}" HorizontalAlignment="Left" Margin="173,179,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.558" Width="49"/>
		<Label x:Name="lbl_t_temp_max" Content="Temperatura Max." HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Center"/>
		<Label x:Name="lbl_t_temp_max_v" Content="{}{value}" HorizontalAlignment="Left" Margin="173,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.474,0.558" Width="49"/>
		<Label x:Name="lbl_t_temp_sen" Content="Sensação" HorizontalAlignment="Left" Margin="65,225,0,0" VerticalAlignment="Top"/>
		<Label x:Name="lbl_t_temp_sen_v" Content="{}{value}" HorizontalAlignment="Left" Margin="173,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.558" Width="49"/>



	</Grid>
</Window>
